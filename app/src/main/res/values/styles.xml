<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Áp dụng các kiểu chủ đề -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- màu nền cửa sổ -->
        <item name="android:windowBackground">@color/common_window_background_color</item>
        <!-- Màu chính của ứng dụng, được Thanh công cụ ActionBar sử dụng theo mặc định -->
        <item name="colorPrimary">@color/common_primary_color</item>
        <!-- Màu tối chính của ứng dụng, được sử dụng theo mặc định cho thanh trạng thái -->
        <item name="colorPrimaryDark">@color/common_primary_dark_color</item>
        <!-- Màu nhấn của ứng dụng, màu này được sử dụng theo mặc định cho hiệu ứng lựa chọn của các điều khiển chung, chẳng hạn như CheckBox RadioButton Switch -->
        <item name="colorAccent">@color/common_accent_color</item>
        <!-- Màu văn bản mặc định, Nút, Màu văn bản TextView -->
        <item name="android:textColor">@color/common_text_color</item>
        <!-- Kích thước phông chữ mặc định, kích thước phông chữ của Nút, TextView -->
        <item name="android:textSize">@dimen/sp_14</item>
        <!-- Màu lời nhắc mặc định, màu văn bản lời nhắc của Nút và Chế độ xem văn bản -->
        <item name="android:textColorHint">@color/common_text_hint_color</item>
        <!-- ActionMode ghi đè Thanh hành động không được đặt xuống dưới -->
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <!-- Màu ActionMode -->
        <item name="actionModeBackground">@color/common_primary_color</item>
        <!-- Giải quyết vấn đề chuỗi tiếng Anh của Nút của Android 5.1 trở lên tự động là chữ hoa -->
        <item name="android:textAllCaps">false</item>
        <!-- Giải quyết vấn đề ImageView không thể tự động kéo giãn hình ảnh theo tỷ lệ -->
        <!--        <item name="android:adjustViewBounds">true</item>-->
        <!-- Phương thức nhập liệu bị ẩn theo mặc định. Bật tùy chọn này sẽ khiến hộp thoại nhập liệu không đóng bàn phím mềm sau khi đóng. -->
        <!--        <item name="android:windowSoftInputMode">stateHidden</item>-->
        <!-- Tắt hiệu ứng gợn nước của RecyclerView NestedScrollView ViewPager -->
        <item name="android:overScrollMode">never</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Tắt khoảng cách văn bản đi kèm với TextView -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:statusBarColor">@color/main_bg</item>
    </style>

    <!-- Phong cách chủ đề trang Splash -->
    <style name="SplashTheme" parent="AppTheme">
        <!-- https://www.jianshu.com/p/d0d907754603 -->

        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Kiểu nút mặc định -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@drawable/button_blue_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_blue_selector</item>
        <item name="android:foreground">@null</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SearchView">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:queryHint">@color/gray_500</item>
        <item name="android:editTextColor">@color/gray_900</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="title">@string/search</item>
        <item name="titleColor">@color/gray_500</item>
    </style>

    <style name="ImageButtonStyleCustom">
        <item name="android:scaleType">center</item>
        <item name="android:layout_gravity">end|center_vertical|center_horizontal|center</item>
    </style>

    <style name="ProgressBarCircleNormal">
        <item name="android:indeterminateDrawable">@drawable/progress_material</item>
    </style>

    <!--    //SheetDialog-->
    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--    Hiển thị dialog-->
    <style name="BottomSheetTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@color/transparent_black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <!-- Kiểu hộp văn bản mặc định -->
    <style name="EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColorHint">#A4A4A4</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
    </style>
    <!--chu chay-->
    <style name="AutoTextView">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="TextViewNumberDark" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
    </style>

    <style name="BottomTabTextStyle">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
        <item name="singleLine">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyRadioButtonBlueCircle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/bg_radio_button_circle_background_blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="MyRadioButtonBlueSquare" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button_background_blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="FullWithScreenDialogStyle">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="chat_style">
        <item name="android:textColor">#ffa6abad</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>